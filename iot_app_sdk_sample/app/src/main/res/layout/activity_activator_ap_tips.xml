<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_tuya_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textColor="#FF333333"
            android:text="@string/activator_ap_tips_title"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="33dp"
            android:textColor="#FF333333"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvConnect"
            android:text="@string/activator_ap_tips_connect"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:id="@+id/ivApTips"
            app:layout_constraintTop_toBottomOf="@id/tvConnect"
            android:src="@drawable/ic_tuya_activator_ap_tips"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="33dp"
            android:textColor="#FF333333"
            android:text="@string/activator_ap_tips_back"
            app:layout_constraintTop_toBottomOf="@id/ivApTips"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/btn_normal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/next_step"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
